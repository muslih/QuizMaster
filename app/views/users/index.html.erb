
<h1 class="page-header">
  Listing Users
  <%= link_to 'New User', new_user_path, class: 'btn btn-primary pull-right' %>
</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>No</th>
      <th>Name</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each_with_index do |user,index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to 'Show', user,class:'btn btn-info btn-xs' %>
          <%= link_to 'Edit', edit_user_path(user),class:'btn btn-warning btn-xs' %>
          <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>


