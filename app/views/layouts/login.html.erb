<!DOCTYPE html>
<html>
  <head>
    <title>QuizMaster</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body id="login-page">
  	<div class="container">
      <div class="row">
        <div class="loginform">
          <header>
            <%= render 'shared/logo' %>
          </header>  
          <section>
            <%= render 'shared/flash_message', message: @model %>
            <%= yield %>
          </section>
          <%= render 'shared/footer' %>
        </div>
      </div>
    </div>
  </body>
</html>
