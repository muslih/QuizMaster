<%= form_for(@user,class:'form-horizontal') do |f| %>
  
  <div class="form-group">
    <%= f.label :name,"Full Name", class:"col-sm-3 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :name,class:'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email,"Email", class:"col-sm-3 control-label" %>
    <div class="col-sm-5">
      <%= f.email_field :email,class:'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password,"Password", class:"col-sm-3 control-label" %>
    <div class="col-sm-5">
      <%= f.password_field :password,class:'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation,"Password Confirmation", class:"col-sm-3 control-label" %>
    <div class="col-sm-5">
      <%= f.password_field :password_confirmation,class:'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-5">
      <%= f.button :submit ,:class=> "btn btn-primary"%>
    </div>
  </div>
<% end %>
