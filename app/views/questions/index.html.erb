<h1 class="page-header">
  Questions
  <%= link_to 'New Question', new_question_path, class:"btn btn-primary pull-right" %>
</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>No</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each_with_index do |question, index| %>
      <tr>
        <td><%= index + 1 %> </td>
        <td><%= question.content.html_safe %></td>
        <td><%= link_to 'Show', question,class:'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Edit', edit_question_path(question),class:'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Destroy', question, method: :delete,class:'btn btn-danger btn-xs', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



