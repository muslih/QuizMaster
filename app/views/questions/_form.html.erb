<%= form_for(@question) do |f| %>
  
  <div class="form-group">
    <%= f.label :content, "Question" %><br>
    <%= f.bootsy_area :content, class:"form-control",rows: 5 %>
  </div>

  <div class="row">
    <%= f.fields_for(:answers) do |answer| %>

      <div class="col-sm-6">
        <hr>
        <div class="form-group">
          <%= answer.label :content, "Answer" %>
          <%= answer.bootsy_area :content,:class=>"form-control",rows: 3, editor_options: { font_styles: false } %>
        </div>
        <div class="form-group">
          <%= answer.check_box :right %> <%= answer.label :right, "Check if it the correct answer!" %>
        </div>
      </div>
    <% end %>
  </div>


  <div class="actions">
    <%= f.submit "Create Question",:class=>"btn btn-primary pull-left" %>
  </div>
<% end %>
